<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#ffffff"
    tools:context=".MainActivity3">

    <Button
        android:id="@+id/btn_rxjava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="52dp"
        android:text="通过RxJava获取网页的图片"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        style="@style/Button.Radius"/>

    <ImageView
        android:id="@+id/image_rxjava"
        android:layout_width="100dp"
        android:layout_height="210dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-7dp" />

    <ImageView
        android:id="@+id/imageaa"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_share_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="356dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="4dp">

        <TextView
            android:id="@+id/tv_show_weather_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="12dp" />
    </ScrollView>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-19dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

    <com.xuexiang.xui.widget.button.SmoothCheckBox
        android:id="@+id/check_box1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_rxjava"
        app:scb_color_checked="@color/black"
        tools:ignore="MissingConstraints" />

    <com.xuexiang.xui.widget.button.SmoothCheckBox
        android:id="@+id/smoothCheckBox"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        app:scb_color_checked="#2196F3"
        app:layout_constraintStart_toEndOf="@+id/check_box1"
        app:layout_constraintTop_toBottomOf="@+id/btn_rxjava"
        tools:ignore="MissingConstraints" />

    <com.xuexiang.xui.widget.button.SmoothCheckBox
        android:id="@+id/smoothCheckBox2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        app:scb_color_checked="#F44336"
        app:layout_constraintStart_toEndOf="@+id/smoothCheckBox"
        app:layout_constraintTop_toBottomOf="@+id/btn_rxjava"
        tools:ignore="MissingConstraints" />

    <com.xuexiang.xui.widget.button.SmoothCheckBox
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        app:scb_color_checked="#FF9800"
        app:layout_constraintStart_toEndOf="@+id/smoothCheckBox2"
        app:layout_constraintTop_toBottomOf="@+id/btn_rxjava"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>