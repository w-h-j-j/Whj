<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_type_three"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_241"
        tools:ignore="MissingConstraints"
        app:layout_constraintHorizontal_weight="0.5">

        <ImageView
            android:id="@+id/img_type_three_goods_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180" />
        <TextView
            android:id="@+id/tv_type_three_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="花花公子"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_above="@id/tv_type_three_goods_price"/>
        <TextView
            android:id="@+id/tv_type_three_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$966"
            android:textColor="#F44336"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"/>
        <ImageView
            android:id="@+id/img_type_three_goods_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_more_horiz_24"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>